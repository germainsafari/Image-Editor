# BFL.ai API Configuration
FLUX_KONTEXT_API_KEY=your_bfl_ai_api_key_here

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# Azure Blob Storage Configuration
# Option 1: Use SAS token (most secure - recommended for production)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_CONTAINER=your_container_name
AZURE_STORAGE_SAS_TOKEN=your_sas_token_here

# Option 2: Use connection string (recommended for development)
AZURE_STORAGE_CONNECTION_STRING=DefaultEndpointsProtocol=https;AccountName=your_account;AccountKey=your_key;EndpointSuffix=core.windows.net
AZURE_STORAGE_CONTAINER=your_container_name

# Option 3: Use individual credentials (fallback)
AZURE_STORAGE_ACCOUNT_NAME=your_storage_account_name
AZURE_STORAGE_CONTAINER=your_container_name
AZURE_STORAGE_ACCOUNT_KEY=your_storage_account_key

# AI Detection API Keys (for high-accuracy image authenticity checking)
# Hive AI - Primary detection service (https://thehive.ai)
HIVE_AI_API_KEY=your_hive_ai_api_key_here

# Sightengine - Secondary detection service (https://sightengine.com)
SIGHTENGINE_API_KEY=your_sightengine_api_key_here

# Next.js Configuration
NEXT_PUBLIC_APP_URL=http://localhost:3000 